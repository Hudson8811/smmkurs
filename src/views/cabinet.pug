            .cabinet-page__section
                .cabinet-page__section-title Основная информация
                .cabinet-page__section-info Здесь можно изменить информацию о себе и указать дополнительную
                .cabinet-page__row
                    .cabinet-page__element
                        .cabinet-page__element-title Почта
                        .cabinet-page__element-input
                            .js-auto-width
                                input(type="email" readonly name="email" value="ivanov@mail.ru")
                                span ivanov@mail.ru
                        .cabinet-page__element-edit
                            a(href="javascript:;") Изменить
                    .cabinet-page__element
                        .cabinet-page__element-title Телефон
                        .cabinet-page__element-input
                            .js-auto-width
                                input(type="text" readonly name="phone" value="ivanov@mail.ru")
                                span ivanov@mail.ru
                        .cabinet-page__element-edit
                            a(href="javascript:;") Изменить
                    .cabinet-page__element
                        .cabinet-page__element-title Город
                        .cabinet-page__element-input
                            .js-auto-width
                                input(type="text" readonly name="city" value="ivanov@mail.ru")
                                span ivanov@mail.ru
                        .cabinet-page__element-edit
                            a(href="javascript:;") Изменить
                .cabinet-page__row
                    .cabinet-page__element
                        .cabinet-page__element-title Пароль
                        .cabinet-page__element-input
                            .js-auto-width
                                input(type="password" readonly name="password" value="password")
                                span password
                        .cabinet-page__element-edit
                            a.js-change-pass(href="javascript:;") Изменить
                    .cabinet-page__element.cabinet-page__element--confirm(style="display:none;")
                        .cabinet-page__element-title Подтвердите пароль
                        .cabinet-page__element-input
                            .js-auto-width
                                input(type="password" readonly name="password2" value="password")
                                span password

            .cabinet-page__section
                .cabinet-page__section-title Активация ключа
                .cabinet-page__section-info Введите код в поле ниже
                label.input-block
                    input.success(type="text" placeholder="some text")
                    .input-block__placeholder Ключ
                    .input-block__status-icon
                    .input-block__error Код уже был активирован

