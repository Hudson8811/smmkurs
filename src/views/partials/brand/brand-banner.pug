section.brand-banner
    .brand-banner__decor-wrapper
        img.brand-banner__decor.brand-banner__decor-desctop(src='img/landings/brand/decor-banner.svg')
        //- img.brand-banner__decor.brand-banner__decor-mobile(src='img/landings/brand/banner-decor-mob.svg')
    .container2.brand-banner__container
        .brand-banner__content
            img.brand-banner__logo(src="img/logo2.png" alt="logo")
            .brand-banner__title Онлайн-курс
            .brand-banner__row
                .brand-banner__inner
                    .brand-banner__subtitle Личный бренд
                    .brand-banner__kurs-info.js-callFancyVideo(data-src="images/452-old.mp4" data-preview="images/video-preview.jpg")
                        img.brand-banner__play(src="img/play.svg" alt="play")
                        .brand-banner__play-text О курсе &nbsp;
                            b за 49 секунд
                    .brand-banner__link Записаться на курс
                .brand-banner__video-preview.js-callFancyVideo(data-src="images/452-old.mp4" data-preview="images/video-preview.jpg")
                    .brand-banner__video-wrapper
                        img.brand-banner__video(src='img/landings/brand/video.jpg')
                    .brand-banner__video-desc О курсе 
                        span за 49 секунд
